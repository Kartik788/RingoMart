<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/image_id_orders"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/delievered_to_this_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="Delievered on Jun 13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_id_orders" />

    <TextView
        android:id="@+id/name_id_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="apple iphone 13 pro"
        app:layout_constraintBottom_toBottomOf="@+id/image_id_orders"
        app:layout_constraintStart_toStartOf="@+id/delievered_to_this_id"
        app:layout_constraintTop_toBottomOf="@+id/delievered_to_this_id" />

    <RatingBar
        android:id="@+id/rating_id"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="181dp"
        android:layout_height="29dp"
        android:numStars="5"
        android:scaleX=".5"
        android:scaleY=".5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        app:layout_constraintStart_toStartOf="@+id/rate_this_product"
        app:layout_constraintTop_toBottomOf="@+id/rate_this_product" />

    <TextView
        android:id="@+id/rate_this_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rate this product"
        app:layout_constraintStart_toStartOf="@+id/name_id_orders"
        app:layout_constraintTop_toBottomOf="@+id/name_id_orders" />


</androidx.constraintlayout.widget.ConstraintLayout>